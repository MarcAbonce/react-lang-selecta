    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^22.1.0",
    "left-pad": "^1.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup-plugin-license": "^3.2.0",
